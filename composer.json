{
    "name": "webtorque/silverstripe-notifications",
    "description": "Simple service provider for sending notification to members over different media.",
    "type": "silverstripe-vendormodule",
    "license": "MIT",
    "authors": [
        {
            "name": "Maxime Rainville",
            "email": "maxime@webtorque.co.nz"
        }
    ],
    "require": {
        "php": ">= 5.5.0, <=7.2",
        "silverstripe/framework": "^4.0.0",
        "silverstripe/cms": "^4.0.0"
    },
    "require-dev": {
      "phpunit/PHPUnit": "~3.7",
      "giggsey/libphonenumber-for-php": "^8.0"
    },
    "extra": {
      "installer-name": "notifications"
    },
    "suggest": {
        "giggsey/libphonenumber-for-php": "Allows advanced validation of the mobile phonen umber when sending an SMS."
    },
    "autoload": {
        "psr-4": {
            "WebTorque\\Notifications\\": "src/",
            "WebTorque\\Notifications\\Tests\\": "tests/"
        }
    },
}
